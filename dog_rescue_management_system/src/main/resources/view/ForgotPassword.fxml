<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="285.0" prefWidth="477.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dog_rescue_management_system.controller.ForgotPasswordController">
   <children>
      <VBox blendMode="SRC_ATOP" layoutX="97.0" layoutY="33.0" prefHeight="205.0" prefWidth="276.0">
         <children>
            <Label text="Forgot Password?">
               <VBox.margin>
                  <Insets left="70.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label text="Enter your email" textFill="#b71540">
               <VBox.margin>
                  <Insets left="100.0" top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtEmail" prefHeight="26.0" prefWidth="271.0" promptText="Email" style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-width: 0 0 1px 0;">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </TextField>
            <HBox prefHeight="30.0" prefWidth="262.0">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#btnCancelOnAction" prefWidth="80.0" style="-fx-background-color: #000;" stylesheets="@style.css" text="Cancel" textFill="WHITE">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnSendCode" mnemonicParsing="false" onAction="#btnSendCodeOnAction" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #8fe7ff;" stylesheets="@style.css" text="Send Code">
                     <HBox.margin>
                        <Insets left="110.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
