                    <children>
                        <TextField fx:id="TxtSub" prefHeight="26.0" prefWidth="578.0" promptText="Subject" style="-fx-background-radius: 25;">
                            <font>
                                <Font name="Dyuthi Regular" size="17.0" />
                            </font>
                        </TextField>
                    </children>
                </HBox>
                <HBox prefHeight="224.0" prefWidth="569.0">
                    <children>
                        <TextArea fx:id="TxtBody" prefHeight="256.0" prefWidth="569.0" promptText="Body" style="-fx-background-radius: 25;">
                            <font>
                                <Font name="Dyuthi Regular" size="17.0" />
                            </font>
                        </TextArea>
                    </children>
                </HBox>
            </children>
        </VBox>
        <Label layoutX="215.0" layoutY="14.0" prefHeight="70.0" prefWidth="187.0" text="Send Mail" textFill="WHITE">
            <font>
                <Font name="Dyuthi Regular" size="42.0" />
