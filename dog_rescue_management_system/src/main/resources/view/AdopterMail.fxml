        <Button fx:id="BtnSend" layoutX="350.0" layoutY="500.0" mnemonicParsing="false" onAction="#BtnSendOnAction" prefHeight="26.0" prefWidth="236.0" style="-fx-background-radius: 25; -fx-background-color: #3B3B98; -fx-background-color: #8fe7ff;" text="Send" textFill="#111111">
            <font>
                <Font name="System Bold" size="19.0" />
            </font></Button>
      <HBox layoutX="16.0" layoutY="99.0" prefHeight="51.0" prefWidth="569.0">
         <children>
            <TextField fx:id="txtTo" prefHeight="26.0" prefWidth="578.0" promptText="To" style="-fx-background-radius: 25;">
               <font>
                  <Font size="17.0" />
               </font>
            </TextField>
         </children>
      </HBox>
      <HBox layoutX="16.0" layoutY="159.0" prefHeight="51.0" prefWidth="569.0">
         <children>
            <TextField fx:id="txtFrom" prefHeight="28.0" prefWidth="578.0" promptText="From" style="-fx-background-radius: 25;">
               <font>
                  <Font size="17.0" />
               </font>
            </TextField>
         </children>
      </HBox>
    </children>
