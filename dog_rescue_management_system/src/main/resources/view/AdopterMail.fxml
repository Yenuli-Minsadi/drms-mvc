        <Button fx:id="BtnSend" layoutX="199.0" layoutY="494.0" mnemonicParsing="false" onAction="#BtnSendOnAction" prefHeight="26.0" prefWidth="220.0" style="-fx-background-radius: 25; -fx-background-color: #3B3B98; -fx-background-color: #8fe7ff;" text="Send" textFill="#111111">
