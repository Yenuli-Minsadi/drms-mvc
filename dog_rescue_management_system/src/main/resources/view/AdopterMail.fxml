        <VBox layoutX="16.0" layoutY="148.0" prefHeight="317.0" prefWidth="569.0" spacing="20.0">
            <children>
                <HBox prefHeight="35.0" prefWidth="569.0" />
                  <TextField fx:id="TxtSub" prefHeight="25.0" prefWidth="569.0" promptText="Subject" style="-fx-background-radius: 25;">
                      <font>
                          <Font name="Dyuthi Regular" size="17.0" />
                      </font>
                  </TextField>
                <HBox prefHeight="224.0" prefWidth="569.0">
                    <children>
                        <TextArea fx:id="TxtBody" prefHeight="224.0" prefWidth="569.0" promptText="Body" style="-fx-background-radius: 25;">
                            <font>
                                <Font name="Dyuthi Regular" size="17.0" />
                            </font>
                        </TextArea>
                    </children>
                </HBox>
            </children>
        </VBox>
        <Label layoutX="215.0" layoutY="37.0" prefHeight="70.0" prefWidth="187.0" text="Send Mail" textFill="WHITE">
